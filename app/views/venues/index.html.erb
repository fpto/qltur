
<div class="jumbotron">
 <div class="container">
   <h1>The best venues in town</h1>
    <p>You know it!</p>
 </div>
</div> 
<div class = "row">
  <div class = "container">
    <% @venues.each do |venue| %> 
      <a href=" <%=  venue_path(venue) %>">
        <div class="col-md-3">
      		<div class="venue" style="background-image: url(<%= venue.cover_image %>); background-size: cover;"> 
        		<p class="title"><%= venue.name %></p> 
      			<p class="description"><%= venue.description %></p>
      		</div> 
    	  </div>
      </a>
    <% end %>
  </div>
</div>

